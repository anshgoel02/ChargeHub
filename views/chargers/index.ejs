<%- layout('layouts/boilerplate') %>
    <div id="cluster-map" class="mb-2"></div>
    <h1>All Superchargers</h1>
    <ul>
        <% for(let charger of chargers) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(charger.images.length) { %>
                            <img src="<%=charger.images[0].url %>" alt="" class="img-fluid">
                            <% } else { %>
                                <img src="https://res.cloudinary.com/ddxcouoem/image/upload/v1680696998/ChargerHub/usk16t4plm22a0b3znrz.jpg"
                                    alt="" class="img-fluid">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= charger.title %>
                            </h5>
                            <p class="card-text">
                                <%= charger.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= charger.location %>
                                </small>
                            </p>
                            <a href="/chargers/<%= charger._id %>" class="btn btn-outline-primary">View <%=
                                    charger.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
        let chargers = `<%- JSON.stringify(chargers) %>`;
    </script>
    <script src="/javascripts/indexPageCluster.js"></script>